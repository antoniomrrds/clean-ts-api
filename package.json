{
  "name": "template-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "sucrase-node src/main/server.ts",
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.build.json",
    "test": "jest --colors  --no-cache --passWithNoTests --runInBand",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix --max-warnings 0",
    "prepare": "husky install",
    "db:dev:rm": "docker compose rm mongo -s -f -v",
    "db:dev:up": "docker compose up mongo -d",
    "db:dev:restart": "npm run db:dev:rm && npm run db:dev:up",
    "docker:dropAll": "docker stop $(docker ps -a -q) && docker system prune -f"
  },
  "keywords": [],
  "author": "Antonio marcos",
  "license": "ISC",
  "devDependencies": {
    "@shelf/jest-mongodb": "^4.1.7",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.18",
    "@types/jest": "^29.5.4",
    "@types/module-alias": "^2.0.2",
    "@types/node": "^20.6.0",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.11.1",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "git-commit-msg-linter": "^5.0.4",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "sucrase": "^3.34.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "module-alias": "^2.2.3",
    "mongodb": "^5.9.0",
    "validator": "^13.11.0"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
