{
  "name": "clean-architecture-api",
  "version": "1.2.0",
  "description": "NodeJs Rest Api using TDD , Clean Architecture and SOLID principles and Typescript",
  "main": "dist/main/server.js",
  "scripts": {
    "start": "TS_NODE_DEV=production node -r dotenv/config dist/main/server.js",
    "debug": "TS_NODE_DEV=production node --inspect=0.0.0.0:9222 --nolazy  -r dotenv/config dist/main/server.js",
    "dev:watch": "ts-node-dev --respawn --transpile-only -r dotenv/config src/main/server.ts",
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.build.json",
    "test": "jest --colors  --no-cache --passWithNoTests --runInBand ",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "test:ci:silent": "npm test -- --coverage --silent",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix --max-warnings 0",
    "prepare": "husky install",
    "docker:rm": "docker compose rm -s -f -v mongo node-api",
    "docker:up": "npm run build && docker compose up -d mongo node-api",
    "docker:restart": "npm run docker:rm && npm run docker:up",
    "docker:dropAll": "docker stop $(docker ps -a -q) && docker system prune -f",
    "docker:dropAll:images": "docker rmi $(docker images -a -q)"
  },
  "keywords": [],
  "author": "Antonio marcos",
  "license": "ISC",
  "devDependencies": {
    "@shelf/jest-mongodb": "^4.1.7",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.18",
    "@types/jest": "^29.5.4",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/module-alias": "^2.0.2",
    "@types/node": "^20.6.0",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.11.1",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "git-commit-msg-linter": "^5.0.4",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "mongodb": "^5.9.0",
    "validator": "^13.11.0"
  }
}
