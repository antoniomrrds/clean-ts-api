{
  "name": "clean-architecture-api",
  "version": "2.0.0",
  "description": "NodeJs Rest Api using TDD , Clean Architecture and SOLID principles and Typescript",
  "main": "dist/main/server.js",
  "scripts": {
    "start": "NODE_ENV=production node -r dotenv/config dist/main/server.js",
    "debug": "NODE_ENV=production nodemon -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy  -r  dotenv/config dist/main/server.js",
    "dev:watch": "ts-node-dev --respawn --transpile-only -r dotenv/config src/main/server.ts",
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "copyfiles -u 1 public/**/* dist/static",
    "test": "jest --colors  --no-cache --passWithNoTests --runInBand ",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "check": "npm-check -s -u",
    "test:coveralls": "npm run test:ci && coveralls < coverage/lcov.info",
    "test:ci:silent": "npm test -- --coverage --silent",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix --max-warnings 0",
    "prepare": "if [ \"$NODE_ENV\" != \"production\" ]; then husky install; fi",
    "docker:down": "docker compose down",
    "docker:up": "npm run build && docker compose up -d mongo node-api",
    "docker:restart": "npm run docker:down && npm run docker:up",
    "docker:dropAll": "docker stop $(docker ps -a -q) && docker system prune -f",
    "docker:dropAll:images": "docker rmi $(docker images -a -q)"
  },
  "keywords": [],
  "author": "Antonio marcos",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@shelf/jest-mongodb": "^4.2.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.18",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/module-alias": "^2.0.2",
    "@types/node": "^20.10.4",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/validator": "^13.11.7",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "bson-objectid": "^2.0.4",
    "copyfiles": "^2.4.1",
    "coveralls": "^3.1.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "git-commit-msg-linter": "^5.0.4",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "mockdate": "^3.0.5",
    "npm-check": "^6.0.1",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@apollo/server": "^4.9.5",
    "@graphql-tools/schema": "^10.0.2",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "graphql-scalars": "^1.22.4",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "mongodb": "^6.3.0",
    "nodemon": "^3.0.2",
    "swagger-ui-express": "^5.0.0",
    "validator": "^13.11.0"
  },
  "engines": {
    "node": "20.x"
  }
}
