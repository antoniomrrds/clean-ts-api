{
  "compilerOptions": {
    "target": "ES2021",
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "allowJs": true,
    "strict": true
  },
  "include": ["src"]
}
